<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, fallback: 'no_img.jpg' %>
      <table class="table">
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <div class="row">
        <%= link_to "", edit_user_path(@user.id) ,class: "btn btn-default btn-block glyphicon glyphicon-wrench" %>
      </div>
      <div class="row">
        <%= form_for(@book, url: books_path) do |b| %>
          <h2 class="col-xs-offset-1">New book</h2>
          <div>
            <label for="title">Title</label>
            <%= b.text_field :title, class: "col-xs-12 field" %>
          </div>
          <div>
            <label for="opinion">Opinion</label>
            <%= b.text_area :body, class: "col-xs-12 field" %>
          </div>
          <div>
            <%= b.submit "Create Book", class: "btn btn-primary col-xs-12 field" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-9">
      <h2>Users</h2>
        <table class="table">
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
          <% @users.each do |users| %>
            <tr class="row">
              <td>
                <%= attachment_image_tag users, :profile_image, fallback: 'no_img.jpg' %>
              </td>
              <td>
                <%= users.name %>
              </td>
              <td>
                <%= link_to "Show", user_path(users.id) %>
              </td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>
