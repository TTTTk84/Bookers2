<%= render 'layouts/list', user: @user, book: @book %>
    <div class="col-xs-9">
      <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <tr class="row">
            <th class="col-md-3 table-noborder">image</th>
            <th class="col-md-4 table-noborder">name</th>
            <th class="col-md-5 table-noborder"></th>
          </tr>

          <% @users.each do |users| %>
            <tr class="row">
              <td class="col-md-3 text-left">
                <%= attachment_image_tag users, :profile_image, fallback: 'no_img.jpg', class: "img-content" %>
              </td>
              <td class="col-md-4 text-left">
                <%= users.name %>
              </td>
              <td class="col-md-5 text-left">
                <%= link_to "Show", user_path(users.id) %>
              </td>
            </tr>
          <% end %>
        </table>
    </div>
