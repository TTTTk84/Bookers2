<%= render 'layouts/list', user: @user, book: @book %>
    <div class="col-xs-9">
      <h2>Books</h2>
        <table class="table table-hover table-inverse ">
          <tr class="row">
            <th class="col-md-3 text-left table-noborder"></th>
            <th class="col-md-4 text-left table-noborder">Title</th>
            <th class="col-md-4 text-left table-noborder">Opinion</th>
            <th class="col-md-1 table-noborder"></th>
          </tr>
          <% @books.each do |books| %>
            <tr class="row">
              <td class="col-md-4 text-left">
                <%= link_to user_path(books.user_id) do %>
                  <%= attachment_image_tag User.find(books.user_id), :profile_image, fallback: 'no_img.jpg', class: "img-content" %>
                <% end %>
              </td>
              <td class="col-md-4 text-left">
                <%= link_to books.title,book_path(books.id) %>
              </td>
              <td class="col-md-4 text-left">
                <%= books.body %>
              </td>
            </tr>
          <% end %>
        </table>
    </div>
