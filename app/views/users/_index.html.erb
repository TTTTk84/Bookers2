<table class="table table-hover table-inverse">
    <tr class="row">
      <th class="col-md-2 table-noborder"></th>
      <th class="col-md-3 table-noborder">Title</th>
      <th class="col-md-3 table-noborder">Opinion</th>
      <th class="col-md-2 table-noborder"></th>
      <th class="col-md-2 table-noborder"></th>
    </tr>
    <% users.each do |users| %>
      <tr class="row">
        <td class="col-md-3 text-left">
          <%= attachment_image_tag users, :profile_image, fallback: 'no_img.jpg', class: "img-content" %>
        </td>
        <td class="col-md-4 text-left">
          <%= users.name %>
        </td>
        <td class="col-md-5 text-left">
          <%= link_to "Show", user_path(users.id) %>
        </td>
      </tr>
    <% end %>
</table>
