<header>
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="nav navbar-nav navbar-left">
        <p class="logo">Bookers</p>
      </div>

      <% if user_signed_in? %>
          <div class="nav navbar-nav navbar-right header-blocks">
            <p class="header-block">
              <%= link_to  " Home", user_path(current_user.id), class: "header-link  glyphicon glyphicon-home home"%>
            </p>
            <p class="header-block">
              <%= link_to " Users", users_path, class: "glyphicon glyphicon-user users header-link" %>
            </p>
            <p class="header-block">
              <%= link_to " Books", books_path, class: "glyphicon glyphicon-book books header-link" %>
            </p>
            <p class="header-block">
              <%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout header-link" %>
            </p>
          </div>
      <% else %>
          <div class="nav navbar-nav navbar-right header-blocks">
            <p class="header-block">
              <%= link_to " Home", root_path, class: "glyphicon glyphicon-home home header-link" %>
            </p>
            <p class="header-block">
              <%= link_to " About", home_about_path, class: "glyphicon glyphicon-link about header-link" %>
            </p>
            <p class="header-block">
              <%= link_to " sign_up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up header-link" %>
            </p>
            <p class="header-block">
              <%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in header-link" %>
            </p>
          </div>
      <% end %>


    </div>
  </nav>
</header>

<% if user_signed_in? %>
  <div class="container">
      <div class="col-xs-offset-3">
        <%= form_with url: search_path, local: true, class: "form-inline", method: :get do |f| %>
          <%= f.text_field :content %>
          <%= f.select  :model, [ "User", "Book" ] %>
          <%= f.select :method, [ ["完全一致", "perfect"], ["前方一致", "forward"], ["後方一致", "backward"], ["部分一致", "partial"] ] %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
  </div>
<% end %>
