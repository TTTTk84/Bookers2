<header>
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="nav navbar-nav navbar-left">
        <p class="logo">Bookers</p>
      </div>
      <div class="nav navbar-nav navbar-right header-blocks">
        <p class="header-block">
          <%= link_to  " Home", user_path(current_user.id), class: "header-link  glyphicon glyphicon-home home"%>
        </p>
        <p class="header-block">
          <%= link_to " Users", users_path, class: "glyphicon glyphicon-user users header-link" %>
        </p>
        <p class="header-block">
          <%= link_to " Books", books_path, class: "glyphicon glyphicon-book books header-link" %>
        </p>
        <p class="header-block">
          <%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout header-link" %>
        </p>
      </div>
    </div>
  </nav>
</header>

<div class="container">
  <div class="col-xs-offset-3">
    <%= form_with url: search_path, local: true, class: "form-inline" do |f| %>
      <%= f.text_field :keyword %>
      <%= f.select  :model, [ "User", "Book" ] %>
      <%= f.select :search_style, [ ["完全一致", "all"], ["前方一致", "before"], ["後方一致", "after"], ["部分一致", "part"] ] %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
</div>
