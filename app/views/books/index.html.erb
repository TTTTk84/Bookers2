<%= render 'layouts/list', user: @user, book: @book %>
<div class="col-xs-9">
  <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <tr class="row">
        <th class="col-md-3 table-noborder"></th>
        <th class="col-md-4 table-noborder">Title</th>
        <th class="col-md-5 table-noborder">Opinion</th>
      </tr>
      <% @books.each do |books| %>
        <tr class="row">
          <td class="col-md-3">
            <%= link_to user_path(books.user_id) do %>
              <%= attachment_image_tag User.find(books.user_id), :profile_image, fallback: 'no_img.jpg', class: "img-content" %>
            <% end %>
          </td>
          <td class="col-md-4">
          <%= link_to book_path(books.id)  do %>
            <%= books.title %>
          <% end %>
          </td>
          <td class="col-md-5">
            <%= books.body %>
          </td>
        </tr>
      <% end %>
    </table>
</div>
