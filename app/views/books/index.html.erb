<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <% if flash[:notice] %>
      <%= flash[:notice] %>
      <% end %>
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, fallback: 'no_img.jpg', class: "img-profile" %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <div class="row">
        <%= link_to "", edit_user_path(@user.id) ,class: "btn btn-default btn-block glyphicon glyphicon-wrench" %>
      </div>
      <div class="row">

        <% if @book.errors.any? %>
            <div id="error_explanation">
              <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
              <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
        <% end %>
        <%= form_for(@book, url: books_path) do |b| %>
          <h2 class="col-xs-offset-1">New book</h2>
          <div>
            <label for="title">Title</label>
            <%= b.text_field :title, class: "col-xs-12 field" %>
          </div>
          <div>
            <label for="opinion">Opinion</label>
            <%= b.text_area :body, class: "col-xs-12 field" %>
          </div>
          <div>
            <%= b.submit "Create Book", class: "btn btn-primary col-xs-12 field" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <tr class="row">
            <th class="col-md-3 table-noborder"></th>
            <th class="col-md-4 table-noborder">Title</th>
            <th class="col-md-5 table-noborder">Opinion</th>
          </tr>
          <% @books.each do |books| %>
            <tr class="row">
              <td class="col-md-3">
                <%= link_to user_path(books.user_id) do %>
                  <%= attachment_image_tag User.find(books.user_id), :profile_image, fallback: 'no_img.jpg', class: "img-content" %>
                <% end %>
              </td>
              <td class="col-md-4">
              <%= link_to book_path(books.id)  do %>
                <%= books.title %>
              <% end %>
              </td>
              <td class="col-md-5">
                <%= books.body %>
              </td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>
