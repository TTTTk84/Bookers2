<table class="table table-hover table-inverse">
    <tr class="row">
      <th class="col-md-3 table-noborder">image</th>
      <th class="col-md-4 table-noborder">name</th>
      <th class="col-md-3 table-noborder"></th>
    </tr>
    <% books.each do |book| %>
      <tr class="row">
        <td class="col-md-2">
          <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag User.find(book.user_id), :profile_image, fallback: 'no_img.jpg', class: "img-content" %>
          <% end %>
        </td>
        <td class="col-md-3">
        <%= link_to book_path(book.id)  do %>
          <%= book.title %>
        <% end %>
        </td>
        <td class="col-md-3">
          <%= book.body %>
        </td>
        <td id="favorite_<%= book.id %>">
          <%= render "favorites/favorite", book: book %>
        </td>
        <td class="col-md-2">
          コメント数: <%= book.book_comments.count %>
        </td>
      </tr>
    <% end %>
</table>
