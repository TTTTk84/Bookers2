<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <% if flash[:notice] %>
      <%= flash[:notice] %>
      <% end %>
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, fallback: 'no_img.jpg' %>
      <table class="table">
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <div class="row">
        <%= link_to "", edit_user_path(@user.id) ,class: "btn btn-default btn-block glyphicon glyphicon-wrench" %>
      </div>
      <div class="row">
        <%= form_for(@book, url: books_path) do |b| %>
          <h2 class="col-xs-offset-1">New book</h2>
          <div>
            <label for="title">Title</label>
            <%= b.text_field :title, class: "col-xs-12 field" %>
          </div>
          <div>
            <label for="opinion">Opinion</label>
            <%= b.text_area :body, class: "col-xs-12 field" %>
          </div>
          <div>
            <%= b.submit "Create Book", class: "btn btn-primary col-xs-12 field" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-9">
      <h2>Book detail</h2>
        <table class="table">
            <tr class="row">
              <td>
                <%= link_to  user_path(@book_detail.user_id) do %>
                  <%= attachment_image_tag @user, :profile_image, fallback: 'no_img.jpg' %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(params[:id]) do %>
                  <%= @book_detail.title %>
                <% end %>
              </td>
              <td>
                <%= @book_detail.body %>
              </td>
              <% if @user.id == current_user.id %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book_detail.id), class: "btn btn-success" %>
                </td>

                <td>
                  <%= link_to "Destroy",  book_path, method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除しますか？"} %>
                </td>
              <% end %>
            </tr>
        </table>
    </div>
  </div>
</div>
