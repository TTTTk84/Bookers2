<div class="container">
  <div class="row">
  <h2>Editing Book</h2>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for(@book, url: book_path(params[:id])) do |book| %>
  <div>
    <label for="">Title</label><br>
    <%= book.text_field :title, class: "col-xs-12" %>
  </div>
  <div>
    <label for="">Opinion</label><br>
    <%= book.text_area :body, class: "col-xs-12" %>
  </div>
  <%= book.submit "Update Book", class: "btn btn-primary col-xs-12" %>
  <% end %>
  <div>
    <%= link_to "Show", book_path(@book.id) %> |
    <%= link_to "Back",  books_path %>
  </div>
  </div>
</div>
